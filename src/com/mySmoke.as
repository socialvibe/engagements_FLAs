package{    import flash.display.MovieClip;    import flash.events.Event;     public class mySmoke extends MovieClip    {        public var XMove:Number;        public var YMove:Number;        private var _power:Number = 0.02; // lower value, stronger power        private var _spread:Number = 1; // the spreading speed        private var _wind:Number = 0; // direction of wind, postive number means right, negtive means left        public function mySmoke() : void        {            alpha = 1;            // the smoke moves left and right            XMove = (Math.random() - Math.random())*_spread + _wind;            YMove  = Math.random() * 5;			            scaleX = Math.random();            scaleY = scaleX;            addEventListener(Event.ENTER_FRAME, smoking);        }          private function smoking(e:Event) : void        {            alpha -= _power; // alpha is decreasing            y -= YMove; // move up towards            x += XMove; // spreading            if (alpha < 0)                removeSmoke();        }                //direction of wind, postive number means right, negtive means left                public function setWind(w:Number) : void        {            _wind = w;            XMove = (Math.random() - Math.random())*_spread + _wind;        }        // lower value, stronger power         public function setPower(p:Number) : void        {            _power = p;        }                // speed of spreading, 1-2 is good enough        public function setSpread(s:Number) : void        {            _spread = s;            XMove = (Math.random() - Math.random())*_spread + _wind;        }        private function removeSmoke() : void        {            removeEventListener(Event.ENTER_FRAME, smoking);            parent.removeChild(this);        }    }}  