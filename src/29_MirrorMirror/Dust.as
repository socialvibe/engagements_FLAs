// please make sure the mirrorbanners folder is always in the same folder as the// FLA so that the following imports don't break.import mirrorbanners.fx.dust.Speck;import mirrorbanners.fx.dust.Pixie;import mirrorbanners.fx.dust.SpeckPool;import flash.events.MouseEvent;import flash.utils.Timer;import flash.events.TimerEvent;var finaleTimeout:int;//Mouse.hide();var dustPool = new SpeckPool( 400, null );var speckTimer:Timer = new Timer( 50 );var cloudTimer:Timer = new Timer( 10 );var lastX:int;var lastY:int;speckTimer.addEventListener( TimerEvent.TIMER, onTimer );cloudTimer.addEventListener( TimerEvent.TIMER, onCloudCheck );function startDust():void{	speckTimer.start();	cloudTimer.start();}function stopDust():void{	speckTimer.stop();	cloudTimer.stop();}function popCloud():void{	addChild( Speck( dustPool.getNext() ).fire( pixie.x, pixie.y ) );	addChild( Speck( dustPool.getNext() ).fire( pixie.x, pixie.y ) );	addChild( Speck( dustPool.getNext() ).fire( pixie.x, pixie.y ) );	addChild( Speck( dustPool.getNext() ).fire( pixie.x, pixie.y ) );	addChild( Speck( dustPool.getNext() ).fire( pixie.x, pixie.y ) );	addChild( Speck( dustPool.getNext() ).fire( pixie.x, pixie.y ) );	addChild( Speck( dustPool.getNext() ).fire( pixie.x, pixie.y ) );}function onTimer( e:TimerEvent = null ):void{	addChild( Speck( dustPool.getNext() ).fire( pixie.x, pixie.y ) );	lastX = pixie.x;	lastY = pixie.y;}function onCloudCheck( e:TimerEvent = null ):void{	if ( Math.abs( lastX - pixie.x ) > 1 || Math.abs( lastY - pixie.y ) > 1 )	{		popCloud();	}}/* function initDust():void{	startDust();} *//*function onMove( e:MouseEvent = null ):void{	Pixie( this.pixie ).moveTo( this.mouseX, this.mouseY );}*/