package { 		import flash.display.MovieClip;	import flash.events.MouseEvent;	import flash.text.TextField;	import com.greensock.*; 	import com.greensock.easing.*;	import com.socialvibe.engagement.api.*;	public class ButtonAnswer extends MovieClip {	public var _mc:MovieClip;	private var _harea:MovieClip;	private var _api:SocialVibeProxy = new SocialVibeProxy();		public function ButtonAnswer() {					_mc = this;						_harea = this;			_mc.mouseChildren = false;						enable();					}				public function buttonOver(e:MouseEvent = null):void {						TweenMax.to(this, .15, { scaleX:1.02, scaleY:1.03, colorMatrixFilter:{brightness:1.1 }});		}				public function buttonOut(e:MouseEvent = null):void {						TweenMax.to(this, .15, { scaleX:1, scaleY:1, colorMatrixFilter:{brightness:1 }});					}						public function buttonClick(e:MouseEvent = null):void {												disable();						buttonOut(null);						//MainApp.instance.play();						var flag = false;						if (name == "button1" && Config.currentCorrect == 1) flag = true;			if (name == "button2" && Config.currentCorrect == 2) flag = true;			if (name == "button3" && Config.currentCorrect == 3) flag = true;												if (flag) {								MainApp.track("BankJob", "click answer correct");				MainApp.instance.gotoAndPlay("correct");				this.gotoAndStop("gotit");				_api.trackOtherInteraction('correct_answer');				_api.trackGameEnd();				_api.engage();							} else {							MainApp.track("BankJob", "click answer wrong");				MainApp.instance.gotoAndPlay("wrong");				this.gotoAndStop("nope");				_api.trackOtherInteraction('incorrect_answer');			}								}		public function enable() {						_harea.buttonMode = true;						if (!_harea.hasEventListener(MouseEvent.ROLL_OVER))			_harea.addEventListener(MouseEvent.ROLL_OVER, buttonOver);						if (!_harea.hasEventListener(MouseEvent.ROLL_OUT))			_harea.addEventListener(MouseEvent.ROLL_OUT, buttonOut);						if (!_harea.hasEventListener(MouseEvent.CLICK))			_harea.addEventListener(MouseEvent.CLICK, buttonClick);					}		public function disable() {						_harea.buttonMode = false;			_harea.removeEventListener(MouseEvent.ROLL_OVER, buttonOver);			_harea.removeEventListener(MouseEvent.ROLL_OUT, buttonOut);			_harea.removeEventListener(MouseEvent.CLICK, buttonClick);					}			}		}