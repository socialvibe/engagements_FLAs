package core {import flash.display.MovieClip;import flash.display.StageAlign;import flash.display.StageScaleMode;import flash.ui.ContextMenu;import com.greensock.OverwriteManager;import com.greensock.plugins.TweenPlugin;import com.greensock.plugins.*;	public class InitProject extends MovieClip {		public function InitProject(_this) {						var a_bout:String = " flash development : www.flavour.pl ";			var a_bou2:String = "  ";						initContextMenu(_this);			initStage(_this);						OverwriteManager.init(OverwriteManager.AUTO);									TweenPlugin.activate([							AutoAlphaPlugin,				ColorMatrixFilterPlugin,				BlurFilterPlugin,				RemoveTintPlugin,				TintPlugin,				GlowFilterPlugin,				ScrollRectPlugin				]);						}				private function initStage(_this) {							// init stage, stage align, scaling mode								_this.stage.scaleMode = StageScaleMode.NO_SCALE;				_this.stage.align = StageAlign.TOP_LEFT;				_this.stage.focus = _this.stage;								//Stager.setStage(_this.stage);						}				private function initContextMenu(_this) {							// hide context menu								var myContextMenu = new ContextMenu();				myContextMenu.hideBuiltInItems();								_this.contextMenu = myContextMenu;						}				}}